    @*CED Main*@
    <script>
    function getDataItem() {
        var grid = $("#grid").data("kendoGrid");
        if (grid.select().length > 0) {
            var dataItem = grid.dataItem(grid.select());
            if (dataItem) {
                return dataItem;
            }
        }
        return null;
    }

    function Create() {
        var windowWidget = $("#WidgetConfigWindow").data("kendoWindow");
        windowWidget.refresh({
            url: "@Url.Action("Create", "CrmEmailSetting")"
        });
        windowWidget.center();
        windowWidget.open();
    }

    function Edit() {
        if (getDataItem()) {
            var windowWidget = $("#WidgetConfigWindow").data("kendoWindow");
            windowWidget.refresh({
                url: '@Url.Action("Edit", "CrmEmailSetting")?guid=' + getDataItem().Guid + ''
            });
            windowWidget.center();
            windowWidget.open();
        } else {
            Notification('@Gemini.Resources.Resource.ListNoItemsSelected', '', '@Gemini.Resources.Resource.ListNoItemsSelected', '@Gemini.Resources.Resource.ListStatusNotificationInfo');
        }
    }

