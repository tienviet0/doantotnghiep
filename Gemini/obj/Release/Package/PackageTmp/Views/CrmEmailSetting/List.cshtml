            }
        } else {
            Notification('@Gemini.Resources.Resource.ListNoItemsSelected', '', '@Gemini.Resources.Resource.ListNoItemsSelected', '@Gemini.Resources.Resource.ListStatusNotificationInfo');
        }
    }
