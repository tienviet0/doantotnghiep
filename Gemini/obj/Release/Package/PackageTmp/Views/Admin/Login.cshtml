        $("#menu1 li a").click(function () {
            //Theme
            $(this).parents(".dropdown").find('#dropdownMenu1').html($(this).text() + '   <i class="fa fa-cog" style="line-height: 1.45;"></i> <span class="sr-only">Toggle Dropdown</span>');
            $(this).parents(".dropdown").find('#dropdownMenu1').val($(this).data('value'));

            if (typeof (Storage) !== "undefined") {
                var storagetheme = {
                    GetKendoTheme: $(this).data('value'),
                    GetKendoThemeName: $(this).text() + '   <i class="fa fa-cog" style="line-height: 1.45;"></i> <span class="sr-only">Toggle Dropdown</span>',
                }
                localStorage.setItem("localStorageKendoTheme", JSON.stringify(storagetheme));
                $('#KendoTheme').val($(this).data('value'));
            }
        });

        $("#menu2 li a").click(function () {
            //Language
            $(this).parents(".dropdown").find('#dropdownMenu2').html($(this).text() + '   <i class="fa fa-cog" style="line-height: 1.45;"></i> <span class="sr-only">Toggle Dropdown</span>');
            $(this).parents(".dropdown").find('#dropdownMenu2').val($(this).data('value'));

            if (typeof (Storage) !== "undefined") {
                var storageLanguage = {
                    GetKendoLanguage: $(this).data('value'),
                    GetKendoLanguageName: $(this).text() + '   <i class="fa fa-cog" style="line-height: 1.45;"></i> <span class="sr-only">Toggle Dropdown</span>'
                }
                localStorage.setItem("localStorageKendoLanguage", JSON.stringify(storageLanguage));
                $('#KendoLanguage').val($(this).data('value'));
                GetLanguage();
            }
        });

        $(document).ready(function () {
            //localStorage.removeItem("GetKendo");
            if (localStorage.getItem("localStorageKendoTheme") === "undefined" || localStorage.getItem("localStorageKendoTheme") == null) {
                $('button#dropdownMenu1.btn.btn-default.dropdown-toggle').html("Default" + '   <i class="fa fa-cog" style="line-height: 1.45;"></i> <span class="sr-only">Toggle Dropdown</span>');
                $('#KendoTheme').val("kendo.Default.min.css");
            } else {
                $('button#dropdownMenu1.btn.btn-default.dropdown-toggle').html(JSON.parse(localStorage.getItem("localStorageKendoTheme")).GetKendoThemeName);
                $('#KendoTheme').val(JSON.parse(localStorage.getItem("localStorageKendoTheme")).GetKendoTheme);
            }

            if (localStorage.getItem("localStorageKendoLanguage") === "undefined" || localStorage.getItem("localStorageKendoLanguage") == null) {
                $('button#dropdownMenu2.btn.btn-default.dropdown-toggle').html("Viet Nam" + '   <i class="fa fa-cog" style="line-height: 1.45;"></i> <span class="sr-only">Toggle Dropdown</span>');
                $('#KendoLanguage').val("kendo.Vi-vn.js");
            } else {
                $('button#dropdownMenu2.btn.btn-default.dropdown-toggle').html(JSON.parse(localStorage.getItem("localStorageKendoLanguage")).GetKendoLanguageName);
                $('#KendoLanguage').val(JSON.parse(localStorage.getItem("localStorageKendoLanguage")).GetKendoLanguage);
            }

            GetLanguage();
        });

        function GetLanguage() {
            if (typeof localStorage.getItem('language') != "undefined") {
                localStorage.removeItem("language");
            }
            if (JSON.parse(localStorage.getItem("localStorageKendoLanguage")) == null) {
                localStorage.setItem('language', 'vi_VN');
            } else {
                switch (JSON.parse(localStorage.getItem("localStorageKendoLanguage")).GetKendoLanguage) {
                    case "kendo.en-GB.js":
                    case "kendo.en-US.js":
                        localStorage.setItem('language', 'en_GB');
                        break;
                    case "kendo.fr-FR.js":
                        localStorage.setItem('language', 'fr_FR');
                        break;
                    case "kendo.de-DE":
                        localStorage.setItem('language', 'de');
                        break;
                    default:
                        localStorage.setItem('language', 'vi_VN');
                };
            }
        }

        function SendEmailActive() {
            $.post('@Url.Action("SendEmailActive", "Admin")', { username: $('#Username').val() },
                    function (dataResponse) {
                        if (dataResponse.StatusCode != 200) {
                            $('#errAcc').html(dataResponse.MessagError);
