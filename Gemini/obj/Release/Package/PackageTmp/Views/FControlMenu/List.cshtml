@(Html.Kendo().Splitter()
              .Name("splitter")
              .Orientation(SplitterOrientation.Horizontal)
              .Panes(panes =>
              {
                  panes.Add().MinSize("30%").HtmlAttributes(new { style = "overflow: hidden" }).Content(@<div>
                    @Rendergrid()
                </div>);
                        panes.Add().MinSize("30%").HtmlAttributes(new { style = "overflow: hidden" }).Content(@<div>
