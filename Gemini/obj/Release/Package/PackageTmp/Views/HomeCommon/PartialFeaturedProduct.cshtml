@model Gemini.Models._20_Web.PartialFeaturedProductModel

@if (Model != null)
{
    <!-- Latest Product Section Begin -->
    <section class="latest-product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="latest-product__text">
                        <h4>Tin đăng nổi bật</h4>
                        <div class="latest-product__slider owl-carousel">
                            @if (Model.ListPosProduce != null && Model.ListPosProduce.Any())
                            {
                                for (var i = 0; i < Math.Ceiling((decimal)((float)Model.ListPosProduce.Count / (float)3)); i++)
                                {
                                    <div class="latest-prdouct__slider__item">
                                        @for (var y = i * 3; y < (i + 1) * 3; y++)
                                        {
                                            if (y < Model.ListPosProduce.Count)
                                            {
                                                <a href="/san-pham/@Model.ListPosProduce[y].SeoFriendUrl" class="latest-product__item">
                                                    <div class="latest-product__item__pic">
                                                        <img src="@Model.ListPosProduce[y].LinkImg0" alt="">
                                                    </div>
                                                    <div class="latest-product__item__text">
                                                        <h6><span style="height: 20px; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 1; overflow: hidden;">@Model.ListPosProduce[y].Name</span> <p style="margin-bottom: 0px; float: right"><span class="featured__item__text__span__featured" id="rating-featured-@Model.ListPosProduce[y].Guid">@Model.ListPosProduce[y].Legit</span></p></h6>
                                                        <span style="color: #d0021b">@String.Format("{0:n0}", Model.ListPosProduce[y].Price) @Model.ListPosProduce[y].Unit</span>
                                                        <p class="featured__item__text__address">@Model.ListPosProduce[y].FullAddress</p>
                                                    </div>
                                                </a>
                                            }
                                        }
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Latest Product Section End -->
}

<script>
    showRating("featured__item__text__span__featured", 15);
</script>