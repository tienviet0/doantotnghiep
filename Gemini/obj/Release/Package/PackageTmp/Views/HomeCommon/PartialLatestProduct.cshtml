@model Gemini.Models._20_Web.PartialLatestProductModel

@if (Model != null)
{
    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Tin đăng mới nhất</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                            <li class="active" data-filter="*">All</li>
                            @if (Model.ListPosCategory != null && Model.ListPosCategory.Any())
                            {
                                foreach (var item in Model.ListPosCategory)
                                {
                                    <li data-filter=".@item.SeoFriendUrl">@item.Name</li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
                @if (Model.ListPosProduce != null && Model.ListPosProduce.Any())
                {
                    foreach (var item in Model.ListPosProduce)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mix @item.CategorySeoFriendUrl fresh-meat">
                            <div class="featured__item">
                                <div class="featured__item__pic set-bg" data-setbg="@item.LinkImg0">
                                    <ul class="featured__item__pic__hover">
                                        <li class="liProduce"><a id="@item.Guid" onclick="loveProduce('@item.Guid')"><i class="fa fa-heart"></i></a></li>
                                        <li><a onclick="cartProduce('@item.Guid', '@ViewBag.CurrentUsername')"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="featured__item__text">
                                    <h6><a href="/san-pham/@item.SeoFriendUrl">@item.Name</a></h6>
                                    <h5 style="color: #d0021b">@String.Format("{0:n0}", item.Price) @item.Unit</h5>
                                    <p style="margin-bottom: 0px"><span class="featured__item__text__span__latest" id="rating-latest-@item.Guid">@item.Legit</span> (@item.LegitCount)</p>
                                    <p><span class="featured__item__text__address">@item.FullAddress</span></p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
    <!-- Featured Section End -->
}

<script>
    showRating("featured__item__text__span__latest", 17);
</script>