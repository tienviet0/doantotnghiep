        $("#SeoFriendUrl").val(RemoveUnicode($("#Name").val()));
        $("#SeoTitle").val($("#Name").val());
    }

    $(document).ready(function () {
        $("#btnUpload").kendoUpload({
            async: {
                saveUrl: '@Url.Action("Save", "PosProduce")?guidProduce=' + $("#Guid").val() + '',
            },
            select: onSelect,
            multiple: true,
            success: onSuccess,
            upload: onUpload
        });
    });

